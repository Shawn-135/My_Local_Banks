<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonDBS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/bank1" />

    <Button
        android:id="@+id/buttonOCBC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/bank2" />

    <Button
        android:id="@+id/buttonUOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/bank3" />

    <TextView
        android:id="@+id/textViewTranslatedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bank1" />

    <TextView
        android:id="@+id/textViewTranslatedText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bank2" />

    <TextView
        android:id="@+id/textViewTranslatedText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bank3" />

</LinearLayout>